{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "jsx": "react",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "outDir": "build",
    "paths": {
      "src/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "useUnknownInCatchVariables": false
  },
  "exclude": ["node_modules", "build"]
}
